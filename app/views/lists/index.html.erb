<!-- app/views/lists/index.html.erb -->
<div class="lists-container">
  <h1 class="page-title">Your Lists</h1>

  <div class="list-header">
    <%= link_to 'Create New List', new_list_path, class: 'btn btn-primary' %>
  </div>

  <div class="lists">
    <% @lists.each do |list| %>
      <%= link_to list_path(list), class: 'list-link' do %>
        <div class="list-card">
          <%= image_tag 'https://images.pexels.com/photos/33129/popcorn-movie-party-entertainment.jpg?auto=compress&cs=tinysrgb&w=800' %>
          <div class="list-content">
            <h2 class="list-title"><%= list.name %></h2>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
